    function BubbleSort(){

      //Array [1 ... 20]
      $data =  range('1','20');

      //Everyday I'm shuffling.
      shuffle($data);

      $data1 = $data;
      
      //Doing BubbleSort
      $nowData = null;
      for ( $i = 0; $i < count($data); $i++){
        for ($j = 0; $j < count($data); $j++){
          if($data[$i] < $data[$j]){
            $nowData = $data[$i];
            $data[$i] = $data[$j];
            $data[$j] = $nowData;
          }
        } 
      }

      $return = array(
        'data' => $data, 
        'data1' => $data1
      );

      return $return;
    }
    </pre>
